<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:stream='urn:import:cazcade.vortex.widgets.client.stream'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:login="urn:import:cazcade.boardcast.client.main.widgets.login">
    <g:HTMLPanel styleName="boardcast-add-comment">
        <stream:CommentBox ui:field="addCommentBox" width="100%" visible="false"/>
        <g:HTMLPanel ui:field="loginPanel" styleName="boardcast-add-comment-or-login">
            <p>Tell us what you think, but first you'll need to
                <login:TwitterLoginBox ui:field="twitterLoginBox"/>
                <a ui:field="loginLink" class="boardcast-login-link">or with Boardcast.</a>
            </p>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>