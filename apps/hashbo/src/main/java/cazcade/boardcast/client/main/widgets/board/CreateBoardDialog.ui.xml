<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields">
    <g:HTMLPanel styleName="dialog-box-contents create-board-dialog-contents">
        <g:CheckBox text="Publicly listed" ui:field="listedCheckBox" checked="true"/>
        <p>
            <small>If ticked your board will be listed in Popular, New etc. Un-tick if this board is just for you or
                your friends.
            </small>
        </p>
        <div class="create-board-shortname" ui:field="shortnameArea">
            <p>
                Board Name
                <small>(optional)</small>
            </p>
            <fields:HashtagTextBox showAvailability="true" showValidity="true" ui:field="tagBox"/>
            <p>
                <small>Supply a short memorable name for your board if you like, this will appears in the boards url
                    after http://boardcast.it/ - it should start with a letter and contain only letters, numbers, '-' or
                    '.'
                </small>
            </p>


        </div>
        <g:Button styleName="primary btn large" text="Create" ui:field="createButton"/>
        <g:Button styleName="btn large" text="Cancel" ui:field="cancelButton"/>

    </g:HTMLPanel>
</ui:UiBinder>