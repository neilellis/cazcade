<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:login="urn:import:cazcade.boardcast.client.main.widgets.login">
    <g:HTMLPanel styleName="login-panel-inner">

        <div class="login-panel-lhs">
            <div>
                <div class="login-panel-row">
                    <div class="login-panel-label">Username
                    </div>
                    <fields:UsernameTextBox showAvailability="false"
                                            styleName="login-panel-entry login-panel-username"
                                            ui:field="username"/>
                </div>
                <div class="login-panel-row">
                    <div class="login-panel-label">Password</div>
                    <fields:VortexPasswordTextBox showValidity="false"
                                                  styleName="login-panel-entry login-panel-password"
                                                  ui:field="password"/>
                </div>
                <g:Label styleName="login-panel-error-message" ui:field="loginErrorMessage"/>
            </div>
        </div>
        <div class="login-panel-rhs">
            <g:HTMLPanel>
                <h3>New to Boardcast?</h3>
                <p>Well then come in and join the party! Just click the Register button.</p>
            </g:HTMLPanel>
        </div>
        <g:Button styleName="btn primary large left-button" text="Sign In" ui:field="loginButton"/>
        <g:Hyperlink text="Register" ui:field="register" styleName="btn large right-button"/>
        <login:TwitterLoginBox/>
        <!--<div class="login-panel-rhs">-->
        <!--This area is reserved for user instructions and links to log in via other networks such as Facebook, Google or OpenID.-->
        <!--</div>-->
    </g:HTMLPanel>
</ui:UiBinder>