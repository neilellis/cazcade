<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:stream="urn:import:cazcade.vortex.widgets.client.stream"
             xmlns:pool="urn:import:cazcade.vortex.pool.widgets"
             xmlns:widgets="urn:import:cazcade.boardcast.client.main.widgets"
             xmlns:toolbar="urn:import:cazcade.boardcast.client.main.widgets.toolbar"
             xmlns:misc="urn:import:cazcade.vortex.widgets.client.misc"
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:profile="urn:import:cazcade.vortex.widgets.client.profile"
             xmlns:board="urn:import:cazcade.boardcast.client.main.widgets.board">
    <g:HTMLPanel>
        <div class="container">

            <div class="content">
                <stream:NotificationPanel ui:field="notificationPanel"/>
                <board:PublicBoardHeader ui:field="publicBoardHeader" visible="false"/>
                <profile:ProfileBoardHeader ui:field="profileBoardHeader" visible="false"/>
                <div class="row board-top-menu-row">
                    <widgets:BoardMenuBar styleName="hashbo-board-menu" autoOpen="true" ui:field="menuBar"
                                          focusOnHoverEnabled="true"/>

                    <g:HTMLPanel ui:field="shareThisHolder" styleName="board-share-this-holder"/>
                </div>

                <div class="board-content"
                     style="">
                    <!--<div class="board-content-top-divider"/>-->
                    <!--<div class="board-content-bottom-divider"/>-->
                    <!--<div style="position:absolute;z-index:40000;top:-6px;left:0;right:0;background-image: url('_images/shadow-bottom-to-top-narrow.png');height:6px;"/>-->
                    <!--<div style="position:absolute;z-index:40000;bottom:-6px;left:0;right:0;background-image: url('_images/shadow-top-to-bottom-narrow.png');height:6px;"/>-->
                    <pool:PoolContentArea scrollX="false" scrollY="false" ui:field="contentArea"/>

                    <div class="board-locked" ui:field="boardLockedIcon"
                         title="You don't have permission to edit this board."/>
                </div>
                <div class="row profile-board-header-bottom">
                    <fields:VortexEditableLabel wordwrap="true" styleName="board-text"
                                                placeholder="Click to edit. Why not put some text here to describe yourself in more detail."
                                                ui:field="text" format="true"/>

                </div>

                <hr/>

                <div class="row">
                    <h2>Comments</h2>
                    <p>Tell us what you think</p>
                    <widgets:AddCommentBox ui:field="addCommentBox"/>
                    <stream:CommentPanel ui:field="comments"/>
                </div>


            </div>
        </div>


        <div class="board-footer">
            <div class="container">
                <div class="content">

                    <div class="row">
                        <div class="span5">
                            <h3>Board Information</h3>
                            This board was created at
                            <span ui:field="publishDate"/>
                            by
                            <span ui:field="authorFullname"/>.
                        </div>
                        <div class="span6">

                            <h3>Followers</h3>
                            <em>Coming very soon.</em>

                        </div>
                        <div class="span5">
                            <div class="board-author-info-box">
                                <h3>About the author</h3>
                                <profile:AliasDetailFlowPanel ui:field="ownerDetailPanel"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </g:HTMLPanel>
</ui:UiBinder>