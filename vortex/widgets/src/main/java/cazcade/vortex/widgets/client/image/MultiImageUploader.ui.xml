<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:PopupPanel width="400px" height="300px" styleName="vortex-image-uploader vortex-entity-image-uploader"
                      ui:field="popup" glassEnabled="true" modal="true">
            <g:HTMLPanel>
                <g:HTMLPanel>
                    <g:HTMLPanel ui:field="loaderPanel" styleName="vortex-image-uploader-loader-area">

                    </g:HTMLPanel>
                    <g:HTMLPanel ui:field="imageLoadedPanel" styleName="vortex-image-uploader-preview">

                    </g:HTMLPanel>
                </g:HTMLPanel>
                <g:HTMLPanel>
                    <g:Label text="Cancel" ui:field="cancelLink" styleName="vortex-image-uploader-cancel-link"/>
                    <g:Button text="Add" ui:field="addButton" styleName="vortex-image-uploader-add-button"/>
                </g:HTMLPanel>
            </g:HTMLPanel>

        </g:PopupPanel>
    </g:HTMLPanel>
</ui:UiBinder>