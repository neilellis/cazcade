<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:field='urn:import:cazcade.vortex.widgets.client.form.fields'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel styleName="login-panel-inner">
        <div class="login-panel-lhs">
            <div>
                <div class="login-panel-row">
                    <div class="login-panel-label">Username
                    </div>
                    <field:UsernameTextBox showAvailability="false"
                                           styleName="login-panel-chat login-panel-username"
                                           ui:field="username"/>
                </div>
                <div class="login-panel-row">
                    <div class="login-panel-label">Password</div>
                    <field:VortexPasswordTextBox showValidity="false" styleName="login-panel-chat login-panel-password"
                                                 ui:field="password"/>
                </div>
                <div class="login-panel-row">
                    <g:Button styleName="login-button" text="Sign In" ui:field="loginButton"/>
                    <g:Hyperlink text="or Sign Up" ui:field="register" styleName="register-link"/>
                </div>
                <g:Label styleName="login-panel-error-message" ui:field="loginErrorMessage"/>
            </div>
        </div>
        <!--<div class="login-panel-rhs">-->
        <!--This area is reserved for user instructions and links to log in via other networks such as Facebook, Google or OpenID.-->
        <!--</div>-->
    </g:HTMLPanel>
</ui:UiBinder>