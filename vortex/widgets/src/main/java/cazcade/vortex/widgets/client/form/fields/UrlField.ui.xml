<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image">
    <g:HTMLPanel styleName="url-field">
        <div class="url-field-textbox-area">
            <label>Url</label>
            <fields:RegexTextBox ui:field="urlField" styleName="url-field-text-box" regex="https?://.*"/>
        </div>
        <image:CachedImage ui:field="previewImage" styleName="url-field-image" width="320px" height="240px"/>
    </g:HTMLPanel>
</ui:UiBinder>