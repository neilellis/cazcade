<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image">
    <g:HTMLPanel styleName="change-image-panel">
        <image:ImageUploader ui:field="imageUploader" width="300px" height="230px"/>
        <div class="change-image-url-area">
            <p>
                Click 'Choose File' to use an image from your computer, alternatively please supply the URL of a web
                page or of an image below.
            </p>
            <br/>
            <fields:RegexTextBox ui:field="urlField" styleName="change-image-text-box" regex="https?://.*"/>
        </div>
        <!--<g:Image ui:field="validityImage" styleName="invisible form-field-validity-icon"/>-->
        <!--<g:Label ui:field="errorMessage" styleName="invisible form-field-error-message"/>-->
    </g:HTMLPanel>
</ui:UiBinder>