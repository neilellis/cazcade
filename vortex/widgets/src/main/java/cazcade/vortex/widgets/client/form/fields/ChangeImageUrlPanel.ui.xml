<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image">
    <g:HTMLPanel styleName="change-image-panel">
        <image:ImageUploader ui:field="imageUploader"/>
        <div class="change-image-url-area">
        <small>You can supply the URL of a web page or of an image. If you supply a web page URL here we will take a snapshot and use that.</small>
        <label>Url</label>
        <fields:RegexTextBox ui:field="urlField" styleName="change-image-text-box"/>
        </div>
        <!--<g:Image ui:field="validityImage" styleName="invisible form-field-validity-icon"/>-->
        <!--<g:Label ui:field="errorMessage" styleName="invisible form-field-error-message"/>-->
    </g:HTMLPanel>
</ui:UiBinder>