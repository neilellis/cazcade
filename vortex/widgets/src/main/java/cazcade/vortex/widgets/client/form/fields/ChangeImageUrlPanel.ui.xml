<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image">
    <g:HTMLPanel styleName="change-image-panel">
        <image:ImageUploader ui:field="imageUploader"/>
        <div class="change-image-url-area">
            <p>
                Click 'Choose Image' to use an image from your computer or the web, alternatively please supply the URL of a web page or of an image.
            </p>
            <br/>
            <fields:RegexTextBox ui:field="urlField" styleName="change-image-text-box" regex="https?://.*"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>