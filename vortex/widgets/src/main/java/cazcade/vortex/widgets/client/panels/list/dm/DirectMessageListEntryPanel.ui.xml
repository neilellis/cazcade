<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image"
             xmlns:date="urn:import:cazcade.vortex.widgets.client.date">
    <g:HTMLPanel styleName="dm-chat-panel">
        <g:HTMLPanel ui:field="imageSurround" styleName="dm-user-panel">
            <image:UserProfileImage styleName="dm-author-icon" ui:field="profileImage"/>
        </g:HTMLPanel>
        <div class="dm-entry-main">
            <g:Label styleName="dm-author-label" ui:field="profileName"/>
            <span class="dm-entry-message" ui:field="text"/>
            <div class="dm-entry-details">
                <date:SelfUpdatingRelativeDate styleName="dm-chat-time" ui:field="dateTime"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>