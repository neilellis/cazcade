<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields"
             xmlns:image="urn:import:cazcade.vortex.widgets.client.image">
    <g:HTMLPanel>
        <div class="form-stacked">
            <div class="row">
                <div class="span6">
                    <image:CachedImage ui:field="image" width="320px" height="200px" notReadyText="YouTube Preview"/>

                    <label>Enter the URL of the YouTube video or it's ID</label>
                    <fields:YouTubeTextBox ui:field="urlTextBox"
                                         styleName="pool-object-youtube-url-textbox"/>
                </div>

            </div>
        </div>
        <g:Button ui:field="done" text="Done" styleName="primary btn"/>
    </g:HTMLPanel>
</ui:UiBinder>