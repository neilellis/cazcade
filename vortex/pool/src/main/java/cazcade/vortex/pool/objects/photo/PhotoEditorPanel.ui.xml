<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields">
    <g:HTMLPanel>
        <div class="row">
            <div class="span12">
                <div class="form-stacked">
                    <div class="row">
                        <div class="span5">
                            <h3>Create/Edit Image</h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="span12">
                <fields:ChangeImageUrlPanel ui:field="changeImagePanel"/>
            </div>
        </div>

        <div class="row">
            <div class="span12">
                <div class="span5">
                    <label>Title
                        <small>(optional)</small>
                    </label>
                    <fields:RegexTextBox ui:field="title"/>
                </div>

                <div class="span6">
                    <label>Description
                        <small>(optional)</small>
                    </label>
                    <fields:VortexTextArea ui:field="description"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>