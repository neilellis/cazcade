<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fields="urn:import:cazcade.vortex.widgets.client.form.fields">
    <g:HTMLPanel>
        <div class="span12">
            <div class="form-stacked">
                <div class="row">
                    <div class="span5">
                        <h3>Create/Edit Image</h3>
                        <label>Title <small>(optional)</small></label>
                        <fields:RegexTextBox ui:field="title"/>
                        <label>Description <small>(optional)</small></label>
                        <fields:VortexTextArea ui:field="description"/>
                    </div>

                    <div class="span6">
                        <fields:ChangeImageUrlPanel ui:field="changeImagePanel"/>
                    </div>

                </div>
            </div>
        </div>
        <g:Button ui:field="done" text="Done" styleName="primary btn"/>
    </g:HTMLPanel>
</ui:UiBinder>