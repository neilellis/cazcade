<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 1.6.4//EN"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.0.0/distro-source/core/src/gwt-module.dtd">

<module>
    <source path="client"/>
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.dom.DOM"/>
    <inherits name="cazcade.vortex.gwt.util.GWTUtil"/>

    <inherits name="com.google.gwt.resources.Resources"/>

    <!-- TODO: Move this into GWTUtil -->

    <define-property name="mobile.user.agent" values="mobilesafari, none"/>

    <property-provider name="mobile.user.agent"><![CDATA[
      var ua = navigator.userAgent.toLowerCase();
      if (ua.indexOf("webkit") != -1 && ua.indexOf("mobile") != -1) {
        return "mobilesafari";
      }
      return "none";
  ]]></property-provider>


    <set-property name="mobile.user.agent" value="none">
        <none>
            <when-property-is name="user.agent" value="safari"/>
        </none>
    </set-property>

<!-- AS OF GWT 2.3 this is now included in GWT
    <replace-with class="cazcade.vortex.dnd.client.DOMImplMobileSafari">
        <when-type-is class="com.google.gwt.user.client.impl.DOMImpl"/>
        <all>
            <when-property-is name="user.agent" value="safari"/>
        </all>
    </replace-with>
-->

    <replace-with class="cazcade.vortex.dnd.client.browser.MobileSafariBrowserUtil">
        <when-type-is class="cazcade.vortex.dnd.client.browser.BrowserUtil"/>
        <all>
            <when-property-is name="user.agent" value="safari"/>
            <when-property-is name="mobile.user.agent" value="mobilesafari"/>
        </all>
    </replace-with>


    <replace-with class="cazcade.vortex.dnd.client.browser.SafariBrowserUtil">
        <when-type-is class="cazcade.vortex.dnd.client.browser.BrowserUtil"/>
        <all>
            <when-property-is name="user.agent" value="safari"/>
            <none>
                <when-property-is name="mobile.user.agent" value="mobilesafari"/>
            </none>
        </all>
    </replace-with>

    <replace-with class="cazcade.vortex.dnd.client.browser.FirefoxBrowserUtil">
        <when-type-is class="cazcade.vortex.dnd.client.browser.BrowserUtil"/>
        <all>
            <when-property-is name="user.agent" value="gecko1_8"/>
        </all>
    </replace-with>
</module>