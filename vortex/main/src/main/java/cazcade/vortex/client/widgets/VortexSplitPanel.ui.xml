<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:panel='urn:import:cazcade.vortex.client.widgets'
             xmlns:toolbar='urn:import:cazcade.vortex.widgets.client.toolbars'
             xmlns:pool='urn:import:cazcade.vortex.pool.widgets'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

    </ui:style>
    <g:DockLayoutPanel visible="true" styleName="vtx-main-panel">
        <g:west size="300">
            <panel:VortexLHSPanel/>
        </g:west>
        <g:center>
            <g:DockLayoutPanel styleName="vtx-rhs">
                <g:north size="45">
                    <toolbar:VortexToolbar/>
                </g:north>
                <g:center>

                    <pool:PoolContentArea ui:field="contentArea" scrollX="true" scrollY="true" pageFlow="true"/>

                </g:center>
                <g:south size="54">
                    <g:AbsolutePanel width="100%" height="100%">
                        <g:SimplePanel styleName="vtx-dock">
                            <panel:DockPanel/>
                        </g:SimplePanel>
                        <g:SimplePanel styleName="vtx-glass-overlay" width="100%">
                        </g:SimplePanel>
                        <g:SimplePanel styleName="vtx-dock vtx-re-overlay">
                            <panel:DockPanel/>
                        </g:SimplePanel>

                    </g:AbsolutePanel>
                </g:south>
            </g:DockLayoutPanel>

        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>